<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Example.Screens"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clipToPadding="false"
    android:clipChildren="false"
    tools:context=".activity.HomeActivity">
    
    <FrameLayout
        android:id="@+id/home_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/home_bottom_navigation_bar_custom"/>
    
    <com.ittianyu.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/home_bottom_navigation_bar_custom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        app:elevation="16dp"
        app:menu="@menu/example_menu_tabs"
        app:itemIconTint="@drawable/example_bottom_navigation_selector"
        app:itemTextColor="@drawable/example_bottom_navigation_selector" />

</RelativeLayout>
