<RelativeLayout
    android:id="@+id/item_company_main_layout"
    style="@style/Example.Screens"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:padding="@dimen/example_padding_layout">
    
    <LinearLayout
        android:id="@+id/item_company_layout_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:padding="2dp"
        android:background="@drawable/example_shape_circle_picture">
        
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/item_company_company_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/example_ic_circle_company_image_placeholder"/>
    </LinearLayout>
    
    <TextView
        android:id="@+id/item_company_label_name"
        style="@style/Example.Companies.Name"
        android:layout_marginStart="@dimen/example_spacing_title_content_horizontal"
        android:layout_toEndOf="@+id/item_company_layout_image"
        android:layout_centerVertical="true"/>
    
</RelativeLayout>